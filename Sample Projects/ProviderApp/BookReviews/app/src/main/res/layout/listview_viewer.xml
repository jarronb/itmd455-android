<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_itemNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="0"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_BookName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_itemNumber"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/tv_itemNumber"
        android:text="Name of Book"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_BookAuthur"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_BookName"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="19dp"
        android:text="Author"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/rb_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_BookAuthur" />
</RelativeLayout>
